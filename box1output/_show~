#!/bin/zsh
_VIDEO_IP='ff05::2'
_AUDIO_IP='ff05::4'

_VIDEO_CAPS='application/x-rtp, media=(string)video, clock-rate=(int)90000, encoding-name=(string)H264, payload=(int)96'
_AUDIO_CAPS='application/x-rtp, media=audio, clock-rate=44100, encoding-name=L16, encoding-params=1, payload=96, format=S16BE, rate=44100, channels=1, layout=interleaved'

# Force audio output to 3.5mm jack
amixer cset name='PCM Playback Route' 1

gst-launch-1.0 -e udpsrc multicast-group=$_VIDEO_IP auto-multicast=true caps=$_VIDEO_CAPS  ! rtph264depay ! h264parse ! omxh264dec ! videobalance brightness=0.0 contrast=1.0 hue=0.0 saturation=1.5 ! videoconvert ! videoflip method=rotate-180 ! autovideosink sync=true &
gst-launch-1.0 -e udpsrc multicast-group=$_AUDIO_IP multicast-iface='eth0' auto-multicast=true caps=$_AUDIO_CAPS ! rtpL16depay ! audioconvert ! alsasink device="hw:0,0"

