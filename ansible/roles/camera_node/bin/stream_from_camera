#!/bin/bash

gst-launch-1.0 -e -v v4l2src extra-controls="c,auto_exposure=1" io-mode=2 do-timestamp=true ! "video/x-raw,width=$WIDTH,height=$HEIGHT,framerate=$FRAMERATE" ! omxh264enc ! "video/x-h264, format=I444, width=$WIDTH, height=$HEIGHT, interlace-mode=progressive, pixel-aspect-ratio=1/1" ! rtph264pay config-interval=1 ! udpsink host=$MG_IP auto-multicast=true 

