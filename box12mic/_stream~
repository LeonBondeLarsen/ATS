 #	gst-launch-1.0 -e -m -v fdsrc ! "audio/x-raw, format=S16BE,rate=$_SR, clock-rate=44100, channels=2, layout=interleaved" ! deinterleave name=d \
 #	d.src_0 ! audioconvert ! rtpL16pay ! udpsink host='ff05::3' auto-multicast=true \
